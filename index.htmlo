<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roblox Player Finder</title>
    <style>
        /* CSS: Styling the Website */
        :root {
            --bg: #0f111a;
            --card: #1a1d29;
            --text: #ffffff;
            --accent: #00a2ff;
            --online: #00e676;
            --offline: #757575;
            --ingame: #00b0ff;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bg);
            color: var(--text);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 50px 20px;
            margin: 0;
        }

        .search-box {
            background: var(--card);
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.4);
            text-align: center;
            width: 100%;
            max-width: 400px;
            margin-bottom: 20px;
        }

        input {
            width: 80%;
            padding: 12px;
            border: none;
            border-radius: 6px;
            background: #2a2e3f;
            color: white;
            font-size: 16px;
            margin-bottom: 15px;
        }

        button {
            width: 87%;
            padding: 12px;
            border: none;
            border-radius: 6px;
            background: var(--accent);
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #0081cc;
        }

        /* Profile Card Styling */
        #profile-card {
            background: var(--card);
            width: 100%;
            max-width: 400px;
            border-radius: 12px;
            overflow: hidden;
            display: none; /* Hidden until search */
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .banner {
            height: 80px;
            background: linear-gradient(90deg, #00a2ff, #00e676);
        }

        .content {
            padding: 20px;
            text-align: center;
            position: relative;
        }

        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: #2a2e3f;
            border: 5px solid var(--card);
            margin-top: -70px;
        }

        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            margin-top: 10px;
        }

        .status-0 { background: var(--offline); }
        .status-1 { background: var(--online); }
        .status-2 { background: var(--ingame); }

        .info-grid {
            text-align: left;
            margin-top: 20px;
            font-size: 14px;
        }

        .info-item { margin-bottom: 8px; color: #b0b3b8; }
        .info-item span { color: white; font-weight: bold; float: right; }
    </style>
</head>
<body>

    <div class="search-box">
        <h2>Roblox Lookup</h2>
        <input type="text" id="usernameInput" placeholder="Enter Username...">
        <button onclick="searchPlayer()">Find Player</button>
    </div>

    <div id="profile-card">
        <div class="banner"></div>
        <div class="content">
            <img id="pfp" class="avatar" src="" alt="Avatar">
            <h2 id="displayName" style="margin: 10px 0 0 0;"></h2>
            <p id="username" style="color: #888; margin: 5px 0;">@username</p>
            
            <div id="statusBadge" class="status-badge">OFFLINE</div>

            <div class="info-grid">
                <div class="info-item">User ID: <span id="userId">0</span></div>
                <div class="info-item">Location: <span id="location">N/A</span></div>
            </div>
        </div>
    </div>

    <script>
        // JS: Fetching data via Proxy
        async function searchPlayer() {
            const name = document.getElementById('usernameInput').value;
            const card = document.getElementById('profile-card');
            
            try {
                // 1. Get User ID from Username
                const userReq = await fetch(`https://users.roproxy.com/v1/usernames/users`, {
                    method: 'POST',
                    body: JSON.stringify({ usernames: [name], excludeBannedUsers: true }),
                    headers: { 'Content-Type': 'application/json' }
                });
                const userData = await userReq.json();

                if (!userData.data || userData.data.length === 0) {
                    alert("Player not found!");
                    return;
                }

                const user = userData.data[0];
                const id = user.id;

                // 2. Get Presence (Status)
                const presReq = await fetch(`https://presence.roproxy.com/v1/presence/users`, {
                    method: 'POST',
                    body: JSON.stringify({ userIds: [id] }),
                    headers: { 'Content-Type': 'application/json' }
                });
                const presData = await presReq.json();
                const presence = presData.userPresences[0];

                // 3. Get Thumbnail (Avatar)
                const thumbReq = await fetch(`https://thumbnails.roproxy.com/v1/users/avatar-headshot?userIds=${id}&size=150x150&format=Png&isCircular=false`);
                const thumbData = await thumbReq.json();

                // Update the UI
                card.style.display = 'block';
                document.getElementById('displayName').innerText = user.displayName;
                document.getElementById('username').innerText = `@${user.name}`;
                document.getElementById('userId').innerText = id;
                document.getElementById('pfp').src = thumbData.data[0].imageUrl;

                const badge = document.getElementById('statusBadge');
                const loc = document.getElementById('location');

                // Presence Types: 0 Offline, 1 Online, 2 InGame, 3 InStudio
                const statusMap = ["OFFLINE", "ONLINE", "IN GAME", "IN STUDIO"];
                badge.innerText = statusMap[presence.userPresenceType];
                badge.className = `status-badge status-${presence.userPresenceType}`;
                loc.innerText = presence.lastLocation || "Hidden";

            } catch (error) {
                console.error(error);
                alert("Error fetching data. The proxy might be down.");
            }
        }
    </script>
</body>
</html>
